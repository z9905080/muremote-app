{
  "name": "muremote-pc",
  "version": "1.0.0",
  "description": "MuRemote PC Client - Remote control for MuMu Emulator",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "node scripts/download-adb.js",
    "prebuild": "node scripts/download-adb.js",
    "build": "npm run prebuild && electron-builder --win"
  },
  "author": "MuRemote Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "24.6.3",
    "extract-zip": "^2.0.1"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "adbkit": "^2.11.0",
    "adbkit-monkey": "~1.0.1",
    "adbkit-logcat": "^1.1.0",
    "ws": "^8.14.0",
    "uuid": "^9.0.0",
    "bonjour": "^3.5.1",
    "iconv-lite": "^0.6.3"
  },
  "build": {
    "appId": "com.muremote.app",
    "productName": "MuRemote PC",
    "extraResources": [
      {
        "from": "resources/adb/",
        "to": "adb",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}
